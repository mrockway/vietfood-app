						<button type="button" class="btn btn-danger options" id="favorite">Guru's Favorite</button>
					</div>
				</div>
			</div>
			
			<div id="result" hidden>
				<div class="container-fluid">
					<div class="row">
						<div class="col-sm-12" id="goBack-holder">
							<!-- x close button will be set from js -->
						</div>
					</div>
					<div class="row">
						<div class="col-sm-6">
							<div id="foodDescription">
								<script id="description-template" type="text/x-handlebars-template">
									<h3>\{{dish.name}} - \{{dish.english}}</h3>
									<img src="\{{dish.image}}" class="img-responsive" style="width: 400px">
									<br>
									<p>\{{dish.description}} <i>(\{{dish.source}})</i></p>
								</script>
							</div>
						</div>
						<div class="col-sm-6">
							<div id="map"></div>
						</div>
					</div>
