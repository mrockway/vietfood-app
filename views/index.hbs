													<button type="button" class="btn btn-danger" id="\{{name}}">I Go Here</button>
													<p>\{{location.display_address.[0]}}</p>
													<p>\{{location.display_address.[2]}}</p>
													<p>Tel: \{{display_phone}}</p>
													<hr>
												\{{/each}}
										</div>
									{{else}}
										<div class="col-sm-6">
												\{{#each lefts}}
													<h4>\{{name}}</h4>
													<p>\{{location.display_address.[0]}}</p>
													<p>\{{location.display_address.[2]}}</p>
													<p>Tel: \{{display_phone}}</p>
